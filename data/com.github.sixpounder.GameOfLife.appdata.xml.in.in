<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
	<id>@APPLICATION_ID@</id>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>
    <name>Game Of Life</name>
    <summary>A simulator of Conway's game of life</summary>
	<description>
	    <p>
	        Game Of Life lets you simulate simple universes made of cells that can be
	        alive or dead, and evolve according to simple rules.
	    </p>
	    <p>
	        Current features:
	    </p>
	    <ul>
	        <li>Random seed universes</li>
	        <li>Provide start templates</li>
	        <li>Manually edit universes</li>
	        <li>Save and restore snapshots</li>
	    </ul>
	</description>
    <screenshots>
        <screenshot>
          <image>https://raw.githubusercontent.com/sixpounder/game-of-life/main/data/screenshots/1.png</image>
        </screenshot>
        <screenshot>
          <image>https://raw.githubusercontent.com/sixpounder/game-of-life/main/data/screenshots/2.png</image>
        </screenshot>
        <screenshot>
          <image>https://raw.githubusercontent.com/sixpounder/game-of-life/main/data/screenshots/3.png</image>
        </screenshot>
        <screenshot>
          <image>https://raw.githubusercontent.com/sixpounder/game-of-life/main/data/screenshots/4.png</image>
        </screenshot>
    </screenshots>
    <launchable type="desktop-id">@APPLICATION_ID@.desktop</launchable>
    <url type="homepage">https://github.com/sixpounder/game-of-life</url>
    <developer_name>Andrea Coronese</developer_name>
    <update_contact>sixpounder_at_protonmail.com</update_contact>
    <translation type="gettext">game-of-life</translation>

    <requires>
        <display_length compare="ge">600</display_length>
    </requires>
    <recommends>
      <control>keyboard</control>
      <control>pointing</control>
    </recommends>
    <content_rating type="oars-1.1"/>
    <releases>
        <release version="0.3.1" date="2023-01-11">
            <description>
                <p>This release addresses the followings:</p>
                <ul>
                    <li>
                        Fixes main menu button shape
                    </li>
                    <li>
                        Fixes a few problems with the main menu entries
                    </li>
                    <li>
                        <b>Layout changes</b>: Moves main menu to the left of the window, introduce close button to the right
                    </li>
                </ul>
            </description>
        </release>
        <release version="0.3.0" date="2022-12-23">
            <description>
                <p>This release addresses the followings:</p>
                <ul>
                    <li>
                        Fixes templates not being loaded
                    </li>
                    <li>
                        Moves grid rendering to gtk4 render node api
                    </li>
                </ul>
            </description>
        </release>
        <release version="0.2.0" date="2022-12-23">
            <description>
                <p>This release addresses the followings:</p>
                <ul>
                    <li>
                        Allow for cells fade out when they die
                    </li>
                    <li>
                        Performance issues on edge cases
                    </li>
                    <li>
                        gtk4/glib/libadwaita stack upgrade
                    </li>
                </ul>
            </description>
        </release>
        <release version="0.1.5" date="2022-10-14">
            <description>
                <p>Translations:</p>
                <ul>
                    <li>Add french translation (Rene Coty)</li>
                </ul>
            </description>
        </release>
        <release version="0.1.4" date="2022-10-14">
            <description>
                <p>This is a revision addressing a few problems</p>
                <ul>
                    <li>Fix interaction bugs</li>
                    <li>Minor performance tweaks</li>
                </ul>
            </description>
        </release>
        <release version="0.1.0" date="2022-10-03"/>
    </releases>
    <provides>@APPLICATION_ID@.desktop</provides>
</component>
